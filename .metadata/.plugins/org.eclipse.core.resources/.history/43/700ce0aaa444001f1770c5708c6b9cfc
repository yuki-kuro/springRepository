package jp.co.sysystem.springWorkout.web.form;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.Pattern;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

  @Data
  @AllArgsConstructor
  @NoArgsConstructor
  public class UserForm {
    //半角英数チェック用のアノテーション
    @Pattern(regexp = "^[a-zA-Z0-9]*$", message = "{MSE002}")
    private String userId;

    //空白チェック用のアノテーション
    @NotBlank(message = "{MSE009}")
    //全角チェック用のアノテーション
    @Pattern(regexp = "^[^ -~｡-ﾟ]*$", message = "{MSE010}")
    private String userName;
    
    //空白チェック用のアノテーション
    @NotBlank(message = "{MSE012}")
    //半角カナチェック用のアノテーション
    @Pattern(regexp = "^[ｦ-ﾟ]*$", message = "{MSE013}")
    private String userKana;
    
    //空白チェック用のアノテーション
    @NotBlank(message = "{MSE016}")
    //のアノテーション
    @Pattern(regexp = "^(19|20)[0-9]{2}/(0[1-9]|1[0-2])/(0[1-9]|[12][0-9]|3[01])$", message = "{MSE018}")
    private String userBirth;
    
    //全角チェック用のアノテーション
    @Pattern(regexp = "^[^ -~｡-ﾟ]*$", message = "{MSE019}")
    private String userClub;
  }
